<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="Bill Amount"
        android:textAlignment="viewStart"
        android:textColor="#000000"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/billAmountTextView"
        android:layout_width="93dp"
        android:layout_height="34dp"
        android:layout_marginEnd="16dp"
        android:text="$0.00"
        android:textAlignment="textEnd"
        android:textColor="#000000"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textView5" />

    <TextView
        android:id="@+id/tip15"
        android:layout_width="152dp"
        android:layout_height="26dp"
        android:layout_marginTop="8dp"
        android:text="Tip (15%): $000.00"
        android:textAlignment="textStart"
        android:textColor="#000000"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@+id/textView5"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <TextView
        android:id="@+id/total15"
        android:layout_width="172dp"
        android:layout_height="35dp"
        android:text="Total (15%): $000.00"
        android:textAlignment="textEnd"
        android:textColor="#000000"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/billAmountTextView"
        app:layout_constraintTop_toTopOf="@+id/tip15" />

    <TextView
        android:id="@+id/tip18"
        android:layout_width="158dp"
        android:layout_height="26dp"
        android:layout_marginTop="8dp"
        android:text="Tip (18%): $000.00"
        android:textColor="#000000"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@+id/tip15"
        app:layout_constraintTop_toBottomOf="@+id/tip15" />

    <TextView
        android:id="@+id/total18"
        android:layout_width="177dp"
        android:layout_height="33dp"
        android:text="Total (18%): $000.00"
        android:textAlignment="textEnd"
        android:textColor="#000000"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/total15"
        app:layout_constraintTop_toTopOf="@+id/tip18" />

    <TextView
        android:id="@+id/tip20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Tip (20%): $000.00"
        android:textColor="#000000"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@+id/tip18"
        app:layout_constraintTop_toBottomOf="@+id/tip18" />

    <TextView
        android:id="@+id/total20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total (20%): $000.00"
        android:textColor="#000000"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/total18"
        app:layout_constraintTop_toTopOf="@+id/tip20" />
</androidx.constraintlayout.widget.ConstraintLayout>